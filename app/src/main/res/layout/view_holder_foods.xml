<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/food_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/star_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_selector"
        android:layout_alignTop="@+id/food_name_area"
        android:layout_alignRight="@+id/food_name_area"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@+id/food_name_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/food_cover"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="FOOD"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</RelativeLayout>